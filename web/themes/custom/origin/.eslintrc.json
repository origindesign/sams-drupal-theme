{
    "extends": "eslint-config-airbnb",
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Drupal": true,
        "once": true,
        "drupalSettings": true,
        "drupalTranslations": true,
        "domready": true,
        "jQuery": true,
        "_": true,
        "matchMedia": true,
        "Backbone": true,
        "Modernizr": true,
        "CKEDITOR": true,
        "TweenMax": true,
        "inView": true,
        "ScrollMagic": true
    },
    "rules": {
        "no-console": 0,
        "max-len": [0],
        "no-restricted-syntax": [1],
        "guard-for-in": [1],
        "no-useless-escape": [0],
        "indent": ["error", 4],
        "consistent-return": [0],
        "no-underscore-dangle": [0],
        "max-nested-callbacks": [1, 4],
        "import/no-mutable-exports": [1],
        "no-plusplus": [1, {
            "allowForLoopAfterthoughts": true
        }],
        "no-param-reassign": [0],
        "no-prototype-builtins": [0],
        "valid-jsdoc": [0],
        "no-unused-vars": [1],
        "prefer-destructuring": ["error", {"object": false, "array": false}],
        "func-names": 0,
        "prefer-rest-params": [0],
        "quotes": [0],
        "padded-blocks": [0],
        "wrap-iife": [0],
        "no-multiple-empty-lines": [0],
        "prefer-arrow-callback": [0],
        "prefer-const": [0],
        "object-shorthand": [0],
        "no-trailing-spaces": [0],
        "brace-style": [0],
        "prefer-template": [0],
        "operator-linebreak": [0],
        "comma-dangle": [0],
        "operator-assignment": [0],
        "linebreak-style": [0],
        "keyword-spacing": [0],
        "space-before-blocks": [0],
        "space-before-function-paren": [0],
        "newline-per-chained-call": [0],
        "default-case": [0]
    }
}
